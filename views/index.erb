<body>
<header>
	<h1>Motivational posters</h1>
</header>
<section id="select-image">
	<h2>Step 1. Select an image</h2>
	<p>Enter the keyword to search for images</p>
	<input id="search-term" type="text">
	<button id="go-search">Go!</button>
	<div id="search-results"></div>
	<div id="branding"></div>
</section>
<section id="add-text">
	<h2>Step 2. Add Text</h2>
	<input id="text" type="text" value="Curiosity is one of the great secrets of happiness">
</section>
<section id="style-image">
	<h2>Step 3. Style it!</h2>
	<div id="workspace">
		<p id="caption"></p>
	</div>
</section>
<div id="controls">
	Left: <input id="left" type="number" value="10">
	Top: <input id="top" type="number" value="10">
	Width: <input id="width" type="number" value="400">
	Size: <input id="size" type="number" value="32">
	Colour: <select id="colour">
		<option>red</option>
		<option>green</option>
		<option>white</option>
		<option>black</option>
		<option>blue</option>
		<option>yellow</option>
		<option>grey</option>
		<option>orange</option>
	</select>
	Align: <select id="align">
		<option>left</option>
		<option>center</option>
		<option>right</option>
	</select>
</div>

